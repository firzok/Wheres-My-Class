<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Select Course theme -->
    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>


    <!-- TabLayout theme in View Schedule -->
    <style name="TabTextAppearance" parent="AppTheme">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">9dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Toolbar theme in View Schedule -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <!--Alarm ToggleIn Nav-Drawer-->
    <style name="AlarmSwitch" parent="AppTheme">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>

        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="nav_drawer_theme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>


    <style name="AppTheme.Picker" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

</resources>
